<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for file access and camera -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- Camera feature is optional -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_new"
        android:supportsRtl="true"
        android:theme="@style/Theme.PDFCreator">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PDFCreator"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:theme="@style/Theme.PDFCreator"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="@string/about_title"
            android:theme="@style/Theme.PDFCreator"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".HelpActivity"
            android:exported="false"
            android:label="@string/help_title"
            android:theme="@style/Theme.PDFCreator"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".EditPDFActivity"
            android:exported="false"
            android:label="@string/edit_pdf_title"
            android:theme="@style/Theme.PDFCreator"
            android:parentActivityName=".MainActivity" />
        
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>